<% @page_title = "Login" %>
<h1><%= @page_title %></h1>

<%- form_tag session_path do -%>
<p><label for="login">Username</label>: <%= text_field_tag 'login' %></p>

<p><label for="password">Password</label>: <%= password_field_tag 'password' %></p>

<p><label for="remember_me">Remember me?</label> <%= check_box_tag 'remember_me' %></p>

<p><%= submit_tag 'Login' %></p>

<%- end -%>
